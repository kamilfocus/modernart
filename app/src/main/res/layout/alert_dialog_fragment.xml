<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#c8004c99"
    android:weightSum="5">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:text="\nInspired by the works of artists such as Piet Mondarian and Ben Nicholson\n"
        android:id="@+id/textView"
        android:layout_weight="3"
        android:textColor="#ffffffff"
        android:textAlignment="center" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:text="Click below to learn more"
        android:id="@+id/textView2"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:textColor="#ffffffff"
        android:textAlignment="center" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center_horizontal"
        android:weightSum="2"
        android:background="#c8004c99"
        >

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="Visit MOMA"
            android:id="@+id/moma_button"
            android:background="#c8004c99"
            android:textColor="#ffffffff"
            />

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="Not Now"
            android:id="@+id/not_button"
            android:background="#c8004c99"
            android:textColor="#ffffffff"
            />
    </LinearLayout>
</LinearLayout>